<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!-- redirection des logs vers la sortie Console Standard -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %class{25} -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- RÃ¨gle : niveau INFO vers la sortie standard -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>